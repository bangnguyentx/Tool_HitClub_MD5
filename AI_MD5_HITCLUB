  <div id="result"></div>

  <script>
    function hexToBytes(hex) {
      let bytes = [];
      for (let i = 0; i < hex.length; i += 2) {
        bytes.push(parseInt(hex.substr(i, 2), 16));
      }
      return bytes;
    }

    function analyze() {
      let md5 = document.getElementById("md5input").value.trim().toLowerCase();
      let output = document.getElementById("result");

      if (!/^[0-9a-f]{32}$/.test(md5)) {
        output.innerHTML = "<p style='color:red'>MD5 kh√¥ng h·ª£p l·ªá!</p>";
        return;
      }

      let bytes = hexToBytes(md5);
      let methods = [];

      // 1. ƒê·∫øm k√Ω t·ª± l·∫ª/ch·∫µn
      let oddCount = (md5.match(/[13579bdf]/g) || []).length;
      let evenCount = 32 - oddCount;
      methods.push(["Odd/Even Hex Count", `Odd:${oddCount}, Even:${evenCount}`, oddCount > evenCount ? "T√†i" : "X·ªâu"]);

      // Render b·∫£ng
      let html = "<table><tr><th>BOT AI</th><th>PH√ÇN T√çCH</th><th>K·∫æT QU·∫¢</th></tr>";
      let countTai = 0, countXiu = 0;
      for (let [name,val,res] of methods) {
        if (res === "T√†i") countTai++; else countXiu++;
        html += `<tr><td>${name}</td><td>${val}</td><td class="${res==='T√†i'?'tai':'xiu'}">${res}</td></tr>`;
      }
      html += "</table>";

      // K·∫øt lu·∫≠n 
      let final = countTai > countXiu ? "T√ÄI" : (countXiu > countTai ? "X·ªàU" : "H√íA");
      html += `<div class="summary">üëâ K·∫øt lu·∫≠n chung: <span class="${final==='T√ÄI'?'tai':'xiu'}">${final}</span></div>`;

      output.innerHTML = html;
    }
  </script>
